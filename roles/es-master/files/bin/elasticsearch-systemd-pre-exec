#!/bin/bash

# CONF_FILE setting was removed
if [ ! -z "$CONF_FILE" ]; then
    echo "CONF_FILE setting is no longer supported. elasticsearch.yml must be placed in the config directory and cannot be renamed."
    exit 1
fi
HOME=/var/log/elasticsearch
GCP_ZONE=`gcloud compute instances list --filter="name= ( \`uname -n\` ...)"|awk 'NR == 2 { print $2 }'`
/usr/bin/bash -c "/usr/bin/systemctl set-environment GCP_ZONE=${GCP_ZONE}"

